{
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.mjs"],
      "options": {
        "parser": "flow",
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": ["package.json"],
      "options": {
        "parser": "json-stringify",
        "tabWidth": 2,
        "useTabs": false
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript",
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "parser": "css",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.scss"],
      "options": {
        "parser": "scss",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html", "*.vue"],
      "options": {
        "parser": "html",
        "printWidth": 120,
        "tabWidth": 2
      }
    }
  ]
}
