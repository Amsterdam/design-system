{
  "ams": {
    "accordion": {
      "button": {
        "font-family": {
          "$value": "{ams.typography.font-family}",
          "$type": "fontFamily"
        },
        "font-size": {
          "$value": "{ams.typography.heading.3.font-size}",
          "$extensions": {
            "ams.type": "fontSize"
          }
        },
        "font-weight": {
          "$value": "{ams.typography.heading.font-weight}",
          "$type": "fontWeight"
        },
        "line-height": {
          "$value": "{ams.typography.heading.3.line-height}",
          "$type": "number"
        },
        "text-wrap": {
          "$value": "{ams.typography.heading.text-wrap}",
          "$extensions": {
            "ams.type": "textWrap"
          }
        }
      },
      "panel": {
        "padding-block": {
          "$value": "0",
          "$type": "number"
        },
        "padding-inline": {
          "$value": "0",
          "$type": "number"
        }
      }
    }
  }
}
