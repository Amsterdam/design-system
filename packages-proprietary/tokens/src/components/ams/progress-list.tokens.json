{
  "ams": {
    "progress-list": {
      "heading-2": {
        "step": {
          "marker": {
            "block-size": {
              "value": "calc({ams.typography.heading.2.font-size} * {ams.typography.heading.2.line-height})"
            },
            "margin-block-start": {
              "value": "calc(({ams.typography.heading.2.line-height} * {ams.typography.heading.2.font-size}) / 2)"
            }
          },
          "shape": {
            "block-size": { "value": "calc({ams.typography.heading.2.font-size} / 1.25)" },
            "inline-size": { "value": "calc({ams.typography.heading.2.font-size} / 1.25)" }
          }
        }
      },
      "heading-3": {
        "step": {
          "marker": {
            "block-size": {
              "value": "calc({ams.typography.heading.3.font-size} * {ams.typography.heading.3.line-height})"
            },
            "margin-block-start": {
              "value": "calc(({ams.typography.heading.3.line-height} * {ams.typography.heading.3.font-size}) / 2)"
            }
          },
          "shape": {
            "block-size": { "value": "{ams.typography.heading.3.font-size}" },
            "inline-size": { "value": "{ams.typography.heading.3.font-size}" }
          }
        }
      },
      "heading-4": {
        "step": {
          "marker": {
            "block-size": {
              "value": "calc({ams.typography.heading.4.font-size} * {ams.typography.heading.4.line-height})"
            },
            "margin-block-start": {
              "value": "calc(({ams.typography.heading.4.line-height} * {ams.typography.heading.4.font-size}) / 2)"
            }
          },
          "shape": {
            "block-size": { "value": "calc({ams.typography.heading.4.font-size} * 1.25)" },
            "inline-size": { "value": "calc({ams.typography.heading.4.font-size} * 1.25)" }
          }
        }
      },
      "step": {
        "body": {
          "padding-block-end": { "value": "{ams.space.l}" },
          "padding-block-start": { "value": "{ams.space.s}" }
        },
        "completed": {
          "connector": {
            "border-color": { "value": "{ams.color.progress.completed}" },
            "border-style": { "value": "solid" }
          },
          "marker": {
            "background-color": { "value": "{ams.color.progress.completed}" },
            "border": { "value": "none" }
          }
        },
        "connector": {
          "border-color": { "value": "{ams.color.progress.upcoming}" },
          "border-style": { "value": "dashed" },
          "border-inline": { "value": "calc({ams.border.width.m} / 2)" }
        },
        "current": {
          "connector": {
            "border-color": { "value": "{ams.color.progress.current}" }
          },
          "indicator": {
            "background-color": { "value": "{ams.color.progress.current}" }
          },
          "marker": {
            "background-color": { "value": "{ams.color.background}" },
            "border-color": { "value": "{ams.color.progress.current}" }
          }
        },
        "indicator": {
          "padding-inline": {
            "value": "{ams.space.l}"
          }
        },
        "marker": {
          "background-color": { "value": "{ams.color.background}" },
          "border-color": { "value": "{ams.color.progress.upcoming}" },
          "border-style": { "value": "solid" },
          "border-width": { "value": "{ams.border.width.m}" }
        },
        "medium": {
          "indicator": {
            "padding-inline": {
              "value": "{ams.space.m}"
            }
          }
        }
      }
    }
  }
}
