{
  "ams": {
    "ordered-list": {
      "color": {
        "$value": "{ams.color.text.default}",
        "$type": "color"
      },
      "font-family": {
        "$value": "{ams.typography.font-family}",
        "$type": "fontFamily"
      },
      "font-size": {
        "$value": "{ams.typography.body-text.font-size}",
        "$extensions": {
          "ams.type": "fontSize"
        }
      },
      "font-weight": {
        "$value": "{ams.typography.body-text.font-weight}",
        "$type": "fontWeight"
      },
      "gap": {
        "$value": "{ams.space.s}",
        "$extensions": {
          "ams.type": "gap"
        }
      },
      "line-height": {
        "$value": "{ams.typography.body-text.line-height}",
        "$extensions": {
          "ams.type": "lineHeight"
        }
      },
      "list-style-type": {
        "$value": "decimal",
        "$extensions": {
          "ams.type": "listStyleType"
        }
      },
      "small": {
        "font-size": {
          "$value": "{ams.typography.body-text.small.font-size}",
          "$extensions": {
            "ams.type": "fontSize"
          }
        },
        "line-height": {
          "$value": "{ams.typography.body-text.small.line-height}",
          "$extensions": {
            "ams.type": "lineHeight"
          }
        }
      },
      "inverse": {
        "color": {
          "$value": "{ams.color.text.inverse}",
          "$type": "color"
        }
      },
      "item": {
        "margin-inline-start": {
          "$value": {
            "value": 2.25,
            "unit": "rem"
          },
          "comment": "Divide your total indentation width over margin and padding to position the marker.",
          "$type": "dimension"
        },
        "padding-inline-start": {
          "$value": {
            "value": 0.25,
            "unit": "rem"
          },
          "comment": "The total level 1 indentation for Amsterdam is 40 pixels, or 2.5rem.",
          "$type": "dimension"
        }
      },
      "ordered-list": {
        "gap": {
          "$value": "{ams.space.s}",
          "$extensions": {
            "ams.type": "gap"
          }
        },
        "list-style-type": {
          "$value": "lower-alpha",
          "$extensions": {
            "ams.type": "listStyleType"
          }
        },
        "padding-block-end": {
          "$value": "{ams.space.s}",
          "$extensions": {
            "ams.type": "paddingBlock"
          }
        },
        "padding-block-start": {
          "$value": "{ams.space.s}",
          "$extensions": {
            "ams.type": "paddingBlock"
          }
        },
        "item": {
          "margin-inline-start": {
            "$value": {
              "value": 1.5,
              "unit": "rem"
            },
            "comment": "Indent less than the parent to start-align the child\u2019s marker with the parent text.",
            "$type": "dimension"
          },
          "padding-inline-start": {
            "$value": {
              "value": 0.25,
              "unit": "rem"
            },
            "comment": "The total level >=2 indentation for Amsterdam is 28 pixels, or 1.75rem.",
            "$type": "dimension"
          }
        }
      }
    }
  }
}
