{
  "version": "0.0.0",
  "author": "Design System Team, City of Amsterdam <designsystem@amsterdam.nl>",
  "description": "Reusable components, patterns and guidelines powering the City of Amsterdamâ€™s digital services.",
  "homepage": "https://designsystem.amsterdam",
  "license": "EUPL-1.2",
  "name": "@amsterdam/design-system",
  "keywords": [
    "amsterdam",
    "amsterdam-design-system",
    "assets",
    "css",
    "design-system",
    "icons",
    "nl-design-system",
    "react"
  ],
  "private": true,
  "engines": {
    "node": "^22",
    "npm": "^10",
    "pnpm": "^10"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "workspaces": [
    "./packages/*",
    "./packages-proprietary/*",
    "./storybook"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "lint": "npm-run-all --continue-on-error lint:** lint-workspaces",
    "lint:css": "stylelint --allow-empty-input '**/*.{css,scss}'",
    "lint:js": "eslint .",
    "lint:package-json": "npmPkgJsonLint **/package.json",
    "lint:package-lock": "pnpm ls --recursive",
    "lint-fix": "npm-run-all --continue-on-error lint-fix:** prettier",
    "lint-fix:css": "stylelint --fix '**/*.{css,scss}'",
    "lint-fix:js": "eslint . --fix",
    "lint-workspaces": "pnpm -r --no-bail lint",
    "plop": "plop",
    "postinstall": "pnpm --filter=!storybook -r build",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "start": "npm-run-all --parallel watch:**",
    "test": "npm run test-workspaces",
    "test-update": "npm-run-all --sequential clean lint build test",
    "test-workspaces": "pnpm -r --no-bail test",
    "update:major": "npm-check-updates --upgrade && pnpm install",
    "update:minor": "npm-check-updates --target minor --upgrade && pnpm install",
    "update:patch": "npm-check-updates --target patch --upgrade && pnpm install",
    "watch:css": "npm run --workspace packages/css build:watch",
    "watch:react": "npm run --workspace packages/react build:watch",
    "watch:storybook": "npm run --workspace storybook start",
    "watch:tokens": "npm run --workspace packages-proprietary/tokens watch"
  },
  "devDependencies": {
    "@eslint/compat": "1.3.2",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.36.0",
    "@eslint/json": "0.13.2",
    "@eslint/markdown": "7.2.0",
    "@types/node": "22.18.6",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-mdx": "3.6.2",
    "eslint-plugin-perfectionist": "4.15.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-storybook": "9.1.7",
    "globals": "16.4.0",
    "html-validate": "10.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.0",
    "npm-check-updates": "18.3.0",
    "npm-package-json-lint": "9.0.0",
    "npm-run-all": "4.1.5",
    "plop": "4.0.3",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "stylelint": "16.24.0",
    "stylelint-config-standard-scss": "15.0.1",
    "stylelint-order": "7.0.0",
    "stylelint-use-logical": "2.1.2",
    "stylelint-value-no-unknown-custom-properties": "6.0.1",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.0",
    "wait-on": "8.0.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@bundled-es-modules/glob",
      "@parcel/watcher",
      "esbuild",
      "sharp",
      "style-dictionary"
    ],
    "overrides": {
      "vitest@>=3.0.0 <3.0.5": ">=3.0.5",
      "prismjs@<1.30.0": ">=1.30.0"
    }
  }
}
