{
  "version": "0.0.0",
  "author": "Design System Team, City of Amsterdam <designsystem@amsterdam.nl>",
  "description": "Reusable components, patterns and guidelines powering the City of Amsterdamâ€™s digital services.",
  "homepage": "https://designsystem.amsterdam",
  "license": "EUPL-1.2",
  "name": "@amsterdam/design-system",
  "keywords": [
    "amsterdam",
    "amsterdam-design-system",
    "assets",
    "css",
    "design-system",
    "icons",
    "nl-design-system",
    "react"
  ],
  "private": true,
  "engines": {
    "node": "^24",
    "npm": "^10",
    "pnpm": "^10"
  },
  "packageManager": "pnpm@10.23.0",
  "workspaces": [
    "./packages/*",
    "./packages-proprietary/*",
    "./storybook"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "lint": "pnpm run --aggregate-output '/^lint:.+$/' && pnpm -r --no-bail lint",
    "lint:css": "stylelint --allow-empty-input '**/*.{css,scss}'",
    "lint:js": "eslint .",
    "lint:package-json": "npmPkgJsonLint **/package.json",
    "lint:package-lock": "pnpm ls --recursive",
    "lint-fix": "pnpm run --aggregate-output '/^lint-fix:.+$/' && npm run prettier",
    "lint-fix:css": "stylelint --fix '**/*.{css,scss}'",
    "lint-fix:js": "eslint . --fix",
    "plop": "plop",
    "postinstall": "pnpm --filter=!storybook -r build",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "start": "pnpm run '/^watch:.+$/'",
    "test": "pnpm -r --no-bail test",
    "test-update": "pnpm run clean && pnpm run build && pnpm run lint && pnpm run test",
    "update:major": "npm-check-updates --upgrade --workspaces --cooldown 1 && pnpm install",
    "update:minor": "npm-check-updates --target minor --upgrade --workspaces --cooldown 1 && pnpm install",
    "update:patch": "npm-check-updates --target patch --upgrade --workspaces --cooldown 1 && pnpm install",
    "watch:css": "npm run --workspace packages/css build:watch",
    "watch:react": "npm run --workspace packages/react build:watch",
    "watch:storybook": "npm run --workspace storybook start",
    "watch:tokens": "npm run --workspace packages-proprietary/tokens build:watch"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@eslint/json": "0.14.0",
    "@eslint/markdown": "7.5.1",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "baseline-browser-mapping": "2.9.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-baseline-js": "0.4.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.2.1",
    "eslint-plugin-mdx": "3.6.2",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-storybook": "9.1.16",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "npm-check-updates": "19.1.2",
    "npm-package-json-lint": "9.0.0",
    "plop": "4.0.4",
    "prettier": "3.7.0",
    "rimraf": "6.1.2",
    "stylelint": "16.26.0",
    "stylelint-config-standard-scss": "16.0.0",
    "stylelint-order": "7.0.0",
    "stylelint-plugin-use-baseline": "1.1.2",
    "stylelint-use-logical": "2.1.2",
    "stylelint-value-no-unknown-custom-properties": "6.0.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@bundled-es-modules/glob",
      "@parcel/watcher",
      "esbuild",
      "sharp",
      "style-dictionary"
    ],
    "overrides": {
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1",
      "glob@>=11.0.0 <11.1.0": ">=11.1.0"
    }
  }
}
