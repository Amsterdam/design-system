{
  "env": {
    "browser": true,
    "es6": true,
    "node": false,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "extends": ["plugin:json/recommended"],
      "files": ["*.json"]
    },
    {
      "extends": [
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json",
        "plugin:mdx/overrides"
      ],
      "files": ["*.mdx"],
      "plugins": ["import"]
    },
    {
      "extends": [
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["*.js", "*.jsx"],
      "plugins": ["import"]
    },
    {
      "extends": [
        "plugin:react/recommended",
        "eslint-config-prettier",
        "./.eslintrc.js.json",
        "./.eslintrc.react.json"
      ],
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint", "import", "jest"]
    },
    {
      "extends": ["plugin:react/recommended", "eslint-config-prettier", "./.eslintrc.js.json"],
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": [
          "packages/react/tsconfig.json",
          "packages/react/tsconfig.test.json",
          "storybook/storybook-css/tsconfig.json",
          "storybook/storybook-css/tsconfig.node.json",
          "storybook/storybook-react/tsconfig.json",
          "storybook/storybook-react/tsconfig.node.json"
        ]
      },
      "plugins": ["@typescript-eslint"]
    }
  ]
}
