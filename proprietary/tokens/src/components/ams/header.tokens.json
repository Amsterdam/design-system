        "font-weight": { "value": "{ams.text.font-weight.bold}" }
      },
      "mega-menu": {
        "button": {
          "cursor": { "value": "{ams.cursor.interactive}" },
          "label": {
            "open": {
              "font-weight": { "value": "{ams.text.font-weight.bold}" }
            }
          }
        }
      },
      "menu": {
        "column-gap": { "value": "{ams.space.lg}" },
        "row-gap": { "value": "{ams.space.xs}" },
