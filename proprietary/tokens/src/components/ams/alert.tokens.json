{
  "ams": {
    "alert": {
      "border-width": { "value": "{ams.border.width.xl}" },
      "border-style": { "value": "solid" },
      "gap": { "value": "{ams.space.sm}" },
      "padding-block": { "value": "{ams.space.md}" },
      "padding-inline": { "value": "{ams.space.lg}" },
      "error": {
        "background-color": { "value": "{ams.brand.color.red.200}" },
        "border-color": { "value": "{ams.brand.color.red.600}" }
      },
      "info": {
        "background-color": { "value": "{ams.brand.color.blue.200}" },
        "border-color": { "value": "{ams.brand.color.blue.600}" }
      },
      "success": {
        "background-color": { "value": "{ams.brand.color.green.200}" },
        "border-color": { "value": "{ams.brand.color.green.600}" }
      },
      "warning": {
        "background-color": { "value": "{ams.brand.color.orange.200}" },
        "border-color": { "value": "{ams.brand.color.orange.600}" }
      },
      "close": {
        "fill": { "value": "{ams.brand.color.neutral.1000}" },
        "hover": {
          "fill": { "value": "{ams.brand.color.blue.600}" }
        }
      },
      "content": {
        "gap": { "value": "{ams.space.sm}" }
      }
    }
  }
